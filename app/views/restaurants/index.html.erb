<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://images.pexels.com/photos/1640772/pexels-photo-1640772.jpeg?auto=compress&cs=tinysrgb&dpr=2&h=750&w=1260);">

  <div class="container">
    <h1><strong>Your Favourite Restaurants!</strong>!</h1>
    <%= link_to "Add a new restaurant!", new_restaurant_path, class:"btn btn-success m-3" %>
  </div>

</div>

<div class="container">
  </div>
  <% @restaurants.each do |restaurant| %>
    <div class="card d-flex ">
      <div class="row align-items-center justify-content-center">
        <h3><%= restaurant.name %> - <%= restaurant.category.capitalize %></h3>
        <h3><%= link_to "See details", restaurant_path(restaurant), class: "btn btn-primary m-3" %></h3>
      </div>
    </div>
  <% end %>
</div>
</div>

